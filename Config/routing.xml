<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns="http://symfony.com/schema/routing" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <!-- DEALER -->
    <route id="dealer.list" path="/admin/module/Dealer/dealer" methods="get">
        <default key="_controller">Dealer:Dealer:default</default>
    </route>
    <route id="dealer.create" path="/admin/module/Dealer/dealer" methods="post">
        <default key="_controller">Dealer:Dealer:create</default>
    </route>
    <route id="dealer.dealer_tab.view" path="/admin/module/Dealer/dealer/edit" methods="get">
        <default key="_controller">Dealer:Dealer:update</default>
    </route>
    <route id="dealer.dealer_tab.edit" path="/admin/module/Dealer/dealer/edit" methods="post">
        <default key="_controller">Dealer:Dealer:processUpdate</default>
    </route>
    <route id="dealer.dealer.delete" path="/admin/module/Dealer/dealer/delete" methods="post">
        <default key="_controller">Dealer:Dealer:delete</default>
    </route>
    <route id="dealer.dealer.toggle.visible" path="/admin/module/Dealer/dealer/toggle-online/{id}" methods="post">
        <default key="_controller">Dealer:Dealer:toggleVisible</default>
        <requirement key="id">\d+</requirement>
    </route>

    <!-- Contact -->
    <route id="dealer.dealer.contact.create" path="/admin/module/Dealer/contact" methods="post">
        <default key="_controller">Dealer:Contact:create</default>
    </route>
    <route id="dealer.dealer.contact.delete" path="/admin/module/Dealer/contact/delete" methods="post">
        <default key="_controller">Dealer:Contact:delete</default>
    </route>
    <route id="dealer.dealer.contact.update" path="/admin/module/Dealer/contact/update" methods="post">
        <default key="_controller">Dealer:Contact:processUpdate</default>
    </route>
    <route id="dealer.dealer.contact.toogle.default" path="/admin/module/Dealer/contact/toggledefault" methods="post">
        <default key="_controller">Dealer:Contact:toggleDefault</default>
    </route>

    <!-- Contact Info -->
    <route id="dealer.dealer.contact-info.create" path="/admin/module/Dealer/contact-info" methods="post">
        <default key="_controller">Dealer:ContactInfo:create</default>
    </route>
    <route id="dealer.dealer.contact-info.delete" path="/admin/module/Dealer/contact-info/delete" methods="post">
        <default key="_controller">Dealer:ContactInfo:delete</default>
    </route>
    <route id="dealer.dealer.contact-info.update" path="/admin/module/Dealer/contact-info/update" methods="post">
        <default key="_controller">Dealer:ContactInfo:processUpdate</default>
    </route>

    <!-- Schedules -->
    <route id="dealer.dealer.schedules.create" path="/admin/module/Dealer/schedules" methods="post">
        <default key="_controller">Dealer:Schedules:create</default>
    </route>
    <route id="dealer.dealer.schedules.delete" path="/admin/module/Dealer/schedules/delete" methods="post">
        <default key="_controller">Dealer:Schedules:delete</default>
    </route>
    <route id="dealer.dealer.schedules.update" path="/admin/module/Dealer/schedules/update" methods="post">
        <default key="_controller">Dealer:Schedules:processUpdate</default>
    </route>
    <route id="dealer.dealer.schedules.clone" path="/admin/module/Dealer/schedules/clone" methods="post">
        <default key="_controller">Dealer:Schedules:clone</default>
    </route>

    <!-- Geo -->
    <route id="dealer.geo.update" path="/admin/module/Dealer/location/update" methods="post">
        <default key="_controller">Dealer:GeoDealer:processUpdate</default>
    </route>

    <!-- Content Link -->
    <route id="dealer.content.link" path="/admin/module/Dealer/content" methods="post">
        <default key="_controller">Dealer:Content:create</default>
    </route>
    <route id="dealer.content.unlink" path="/admin/module/Dealer/content/delete" methods="post">
        <default key="_controller">Dealer:Content:delete</default>
    </route>

    <!-- Folder Link -->
    <route id="dealer.folder.link" path="/admin/module/Dealer/folder" methods="post">
        <default key="_controller">Dealer:FolderLink:create</default>
    </route>
    <route id="dealer.folder.unlink" path="/admin/module/Dealer/folder/delete" methods="post">
        <default key="_controller">Dealer:FolderLink:delete</default>
    </route>

    <!-- Brand Link -->
    <route id="dealer.brand.link" path="/admin/module/Dealer/brand" methods="post">
        <default key="_controller">Dealer:BrandLink:create</default>
    </route>
    <route id="dealer.brand.unlink" path="/admin/module/Dealer/brand/delete" methods="post">
        <default key="_controller">Dealer:BrandLink:delete</default>
    </route>


    <!-- Admin Link -->
    <route id="dealer.admin.link" path="/admin/module/Dealer/admin" methods="post">
        <default key="_controller">Dealer:AdminLink:create</default>
    </route>
    <route id="dealer.admin.unlink" path="/admin/module/Dealer/admin/delete" methods="post">
        <default key="_controller">Dealer:AdminLink:delete</default>
    </route>

    <!-- Product Link -->
    <route id="dealer.product.link" path="/admin/module/Dealer/product" methods="post">
        <default key="_controller">Dealer:ProductLink:create</default>
    </route>
    <route id="dealer.product.unlink" path="/admin/module/Dealer/product/delete" methods="post">
        <default key="_controller">Dealer:ProductLink:delete</default>
    </route>

    <!-- API -->
    <route id="dealer.api.default" path="/api/3/dealer" methods="get">
        <default key="_controller">Dealer:Api:default</default>
    </route>

    <!-- Image & SEO -->
    <route id="admin.products.dealer.image.edit" path="/admin/module/dealer/image/{type}/edit/{parentId}/{id}">
        <default key="_controller">Dealer\Controller\Image\CustomImagesAdminController::editCustomImageAction</default>
        <requirement key="type">imageHeader|imageBox</requirement>
        <requirement key="parentId">\d+</requirement>
        <requirement key="id">\d+</requirement>
    </route>
    <route id="admin.products.dealer.image.update" path="/admin/module/dealer/image/{type}/update/{parentId}/{id}">
        <default key="_controller">Dealer\Controller\Image\CustomImagesAdminController::updateCustomImageAction</default>
        <requirement key="type">imageHeader|imageBox</requirement>
        <requirement key="parentId">\d+</requirement>
        <requirement key="id">\d+</requirement>
    </route>
    <route id="admin.dealer.image.delete" path="/admin/module/dealer/image/{type}/delete/{parentId}/{id}">
        <default key="_controller">Dealer\Controller\Image\CustomImagesAdminController::deleteCustomImageAction</default>
        <requirement key="type">imageHeader|imageBox</requirement>
        <requirement key="parentId">\d+</requirement>
        <requirement key="id">\d+</requirement>
    </route>
    <route id="admin.dealer.update.image.box" path="/admin/module/dealer/image/box/update">
        <default key="_controller">Dealer\Controller\Image\CustomImagesAdminController::updateProductImageBox</default>
    </route>
    <route id="admin.dealer.update.image.header" path="/admin/module/dealer/image/header/update">
        <default key="_controller">Dealer\Controller\Image\CustomImagesAdminController::updateProductImageHeader</default>
    </route>
    <route id="admin.dealer.update.seo" path="/admin/module/dealer/seo/update">
        <default key="_controller">Dealer\Controller\MetaSeoController::updateSeo</default>
    </route>
    <route id="dealer.front.slug" path="/magasin/{slug}">
        <default key="_controller">Dealer\Controller\DealerFrontController::show</default>
    </route>
    <route id="dealer.dealer.add.favorite" path="/dealer/favorite/{dealerId}">
        <default key="_controller">Dealer\Controller\DealerFrontController::addToFavorite</default>
    </route>
    <route id="dealer.dealer.remove.favorite" path="/dealer/unfavorite">
        <default key="_controller">Dealer\Controller\DealerFrontController::removeFavorite</default>
    </route>
</routes>
